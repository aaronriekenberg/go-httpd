{
    "dropPrivileges": {
        "chrootEnabled": true,
        "chrootDirectory": "/var/www",
        "groupName": "www",
        "userName": "www"
    },
    "servers": [
        {
            "serverID": "http",
            "listenAddressList": [
                ":80",
                "[::]:80"
            ],
            "timeouts": {
                "readTimeoutMilliseconds": 30000,
                "writeTimeoutMilliseconds": 30000
            },
            "logRequests": true,
            "locations": [
                {
                    "httpPathPrefix": "/.well-known/acme-challenge/",
                    "directoryLocation": {
                        "stripPrefix": "/.well-known/acme-challenge/",
                        "cacheControlValue": "max-age=0",
                        "directoryPath": "/acme"
                    }
                },
                {
                    "httpPathPrefix": "",
                    "redirectLocation": {
                        "redirectURL": "https://$HTTP_HOST$REQUEST_PATH",
                        "responseStatus": 302
                    }
                }
            ]
        },
        {
            "serverID": "https",
            "listenAddressList": [
                ":443",
                "[::]:443"
            ],
            "tlsInfo": {
                "certFile": "/etc/ssl/aaronr.digital.fullchain.pem",
                "keyFile": "/etc/ssl/private/aaronr.digital.key"
            },
            "timeouts": {
                "readTimeoutMilliseconds": 30000,
                "writeTimeoutMilliseconds": 30000
            },
            "logRequests": true,
            "locations": [
                {
                    "httpPathPrefix": "/.git",
                    "blockedLocation": {
                        "responseStatus": 403
                    }
                },
                {
                    "httpPathPrefix": "/.well-known/acme-challenge/",
                    "directoryLocation": {
                        "stripPrefix": "/.well-known/acme-challenge/",
                        "cacheControlValue": "max-age=0",
                        "directoryPath": "/acme"
                    }
                },
                {
                    "httpPathPrefix": "/cgi-bin/",
                    "fastCGILocation": {
                        "unixSocketPath": "/run/go-fastcgi/socket"
                    }
                },
                {
                    "httpPathPrefix": "",
                    "directoryLocation": {
                        "cacheControlValue": "public, max-age=150",
                        "directoryPath": "/htdocs/aaronr.digital"
                    }
                }
            ]
        }
    ]
}
