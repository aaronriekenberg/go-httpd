{
    "servers": [
        {
            "listenAddressList": [
                "127.0.0.1:8080",
                "[::1]:8080"
            ],
            "logRequests": true,
            "locations": [
                {
                    "httpPathPrefix": "/.git",
                    "blockedLocation": {
                        "responseStatus": 403
                    }
                },
                {
                    "httpPathPrefix": "/.well-known/acme-challenge/",
                    "directoryLocation": {
                        "stripPrefix": "/.well-known/acme-challenge/",
                        "directoryPath": "/var/www/acme"
                    }
                },
                {
                    "httpPathPrefix": "",
                    "redirectLocation": {
                        "redirectURL": "https://$HTTP_HOST$REQUEST_PATH",
                        "responseStatus": 302
                    }
                }
            ]
        },
        {
            "listenAddressList": [
                "127.0.0.1:8443",
                "[::1]:8443"
            ],
            "tlsInfo": {
                "certFile": "aaronr.digital.fullchain.pem",
                "keyFile": "aaronr.digital.key"
            },
            "logRequests": true,
            "locations": [
                {
                    "httpPathPrefix": "/.git",
                    "blockedLocation": {
                        "responseStatus": 403
                    }
                },
                {
                    "httpPathPrefix": "/.well-known/acme-challenge/",
                    "directoryLocation": {
                        "stripPrefix": "/.well-known/acme-challenge/",
                        "directoryPath": "/var/www/acme"
                    }
                },
                {
                    "httpPathPrefix": "/cgi-bin/",
                    "fastCGILocation": {
                        "unixSocketPath": "/var/www/run/go-fastcgi/socket"
                    }
                },
                {
                    "httpPathPrefix": "",
                    "directoryLocation": {
                        "directoryPath": "/var/www/htdocs/aaronr.digital"
                    }
                }
            ]
        }
    ]
}